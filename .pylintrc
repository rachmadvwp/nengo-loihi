[MASTER]

ignore = _vendor, compat.py, conftest.py, nxsdk_shim.py


[MESSAGES CONTROL]

disable = all,
          broad-except,
          import-error,
          reimported,
enable = anomalous-backslash-in-string,
         bad-mcs-classmethod-argument,
         bad-super-call,
         bad-whitespace,
         bare-except,
         cyclic-import,
         dangerous-default-value,
         function-redefined,
         line-too-long,
         super-init-not-called,
         ungrouped-imports,
         unnecessary-lambda,
         unused-import,
         wrong-import-order,


[FORMAT]

max-line-length = 79


[CLASSES]

valid-metaclass-classmethod-first-arg = metacls


[IMPORTS]

known-third-party = abr_control,
                    nengo,
                    nengo_dl,
                    nengo_extras,
                    numpy,
                    matplotlib,
                    pytest


[REPORTS]

reports = no
score = no
